<% include ../partials/header %>
    <div class="container">
        <h1 style="text-align:center">Add New Comment to <%= campground.name%></h1>
        <div class="row">
            
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id%>/comments"  method="POST">
                    <div class="input-group mb-3">
                        <input class="form-control" type="text" placeholder="text" name="comment[text]">
                    </div>

                    <div class="input-group mb-3">
                        <button class="btn btn-outline-secondary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Back</a>
            </div>
            
        </div>
    </div>
<% include ../partials/footer %>